@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FurnitureShop</title>
    <link href="~/css/login.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            padding: 40px 35px;
            width: 100%;
            max-width: 420px;
            animation: fadeIn 0.6s ease-out;
        }

            .login-card h2 {
                color: #2a5298;
                font-weight: 700;
                margin-bottom: 25px;
                text-align: center;
            }

        .form-floating {
            margin-bottom: 15px;
        }

        .form-control {
            border-radius: 8px;
            height: 50px;
            font-size: 15px;
            border: 1px solid #ccc;
        }

        .btn-primary {
            background: #2a5298;
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background: #1e3c72;
                transform: translateY(-2px);
            }

        a {
            color: #2a5298;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .text-danger {
            font-size: 0.9em;
        }

       
    </style>
</head>

<body>
    <div class="login-card">
        <h2>Đăng nhập tài khoản</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="Mật khẩu" />
                <label asp-for="Input.Password">Mật khẩu</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox mb-3 text-start">
                <label class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Đăng nhập</button>

            <p><a asp-page="./ForgotPassword">Quên mật khẩu?</a></p>
            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký tài khoản mới</a></p>
            <p class="text-center">
                <a href="~/Home/Index">← Quay lại trang chủ</a>
            </p>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
