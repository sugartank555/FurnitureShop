<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Trang quản trị hệ thống FurnitureShop" />
    <meta name="author" content="Sugar" />
    <title>@ViewData["Title"] - FurnitureShop Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/Admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">

    <!-- 🔹 Thanh điều hướng trên -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Logo -->
        <a class="navbar-brand ps-3" href="/Admin/Home/Index">FurnitureShop Admin</a>

        <!-- Toggle Sidebar -->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>

        <!-- Ô tìm kiếm -->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Tìm kiếm..." aria-label="Tìm kiếm" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div>
        </form>

        <!-- User Dropdown -->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" data-bs-toggle="dropdown">
                    <i class="fas fa-user fa-fw"></i> @User.Identity?.Name
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="/">Về trang người dùng</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <form action="/Identity/Account/Logout" method="post">
                            <button type="submit" class="dropdown-item text-danger">Đăng xuất</button>
                        </form>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <!-- 🔹 Sidebar trái -->
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Tổng quan</div>

                        <a class="nav-link" href="/Admin/Home/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Bảng điều khiển
                        </a>

                        <div class="sb-sidenav-menu-heading">Quản lý</div>

                        <a class="nav-link" href="/Admin/Categories/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-list"></i></div>
                            Danh mục
                        </a>

                        <a class="nav-link" href="/Admin/Products/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-box"></i></div>
                            Sản phẩm
                        </a>

                        <a class="nav-link" href="/Admin/Orders/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div>
                            Đơn hàng
                        </a>

                        <a class="nav-link" href="/Admin/Users/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Người dùng
                        </a>

                        <div class="sb-sidenav-menu-heading">Hệ thống</div>

                        <a class="nav-link" href="/Admin/Reports/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-line"></i></div>
                            Báo cáo thống kê
                        </a>

                        <a class="nav-link" href="/Admin/Settings/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-cogs"></i></div>
                            Cấu hình hệ thống
                        </a>
                    </div>
                </div>

                <div class="sb-sidenav-footer">
                    <div class="small">Đăng nhập với:</div>
                    @User.Identity?.Name
                </div>
            </nav>
        </div>

        <!-- 🔹 Nội dung chính -->
        <div id="layoutSidenav_content">
            <main class="p-4">
                @RenderBody()
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">© @DateTime.Now.Year FurnitureShop Admin</div>
                        <div>
                            <a href="#">Chính sách bảo mật</a>
                            &middot;
                            <a href="#">Điều khoản sử dụng</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- 🔹 Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
    <script src="~/Admin/assets/demo/chart-area-demo.js"></script>
    <script src="~/Admin/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"></script>
    <script src="~/Admin/js/datatables-simple-demo.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
