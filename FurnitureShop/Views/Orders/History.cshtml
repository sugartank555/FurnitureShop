@model IEnumerable<FurnitureShop.Models.Order>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<div class="container mt-4">
    <h2>🧾 Lịch sử đơn hàng của bạn</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">Bạn chưa có đơn hàng nào.</div>
        <a href="/Home/Shop" class="btn btn-primary">Tiếp tục mua sắm</a>
    }
    else
    {
        <table class="table table-striped table-bordered mt-4">
            <thead class="table-light">
                <tr>
                    <th>Mã đơn</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.Id</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@order.TotalAmount.ToString("N0") đ</td>
                        <td>
                            @{
                                var color = order.Status switch
                                {
                                    FurnitureShop.Models.OrderStatus.Pending => "text-warning",
                                    FurnitureShop.Models.OrderStatus.Processing => "text-info",
                                    FurnitureShop.Models.OrderStatus.Shipped => "text-primary",
                                    FurnitureShop.Models.OrderStatus.Completed => "text-success",
                                    FurnitureShop.Models.OrderStatus.Cancelled => "text-danger",
                                    _ => ""
                                };
                            }
                            <span class="@color">@order.Status</span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary">Xem chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
