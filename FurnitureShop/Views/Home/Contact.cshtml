@{
    ViewData["Title"] = "Liên hệ với chúng tôi";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <!-- Cột bên trái: Thông tin liên hệ -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h3 class="mb-4 text-success fw-bold">Thông tin liên hệ</h3>

                    <p><i class="bi bi-geo-alt-fill text-danger"></i> <strong>Địa chỉ:</strong><br />
                    123 Nguyễn Văn Linh, Quận 7, TP. Hồ Chí Minh</p>

                    <p><i class="bi bi-telephone-fill text-primary"></i> <strong>Điện thoại:</strong><br />
                    0901 234 567</p>

                    <p><i class="bi bi-envelope-fill text-warning"></i> <strong>Email:</strong><br />
                    support@furnitureshop.com</p>

                    <p><i class="bi bi-clock-fill text-success"></i> <strong>Giờ mở cửa:</strong><br />
                    Thứ 2 – Thứ 7: 8:00 – 20:00<br />
                    Chủ nhật: 9:00 – 18:00</p>

                    <div class="mt-4">
                        <iframe 
                            src="https://www.google.com/maps?q=123+Nguyen+Van+Linh,+Quan+7,+Ho+Chi+Minh,+Vietnam&output=embed"
                            width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cột bên phải: Form liên hệ -->
        <div class="col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h3 class="mb-4 text-center fw-bold text-success">Gửi tin nhắn cho chúng tôi</h3>

                    <form id="contactForm">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ và tên</label>
                            <input type="text" class="form-control" placeholder="Nhập họ và tên của bạn" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input type="email" class="form-control" placeholder="Nhập email của bạn" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Nội dung</label>
                            <textarea class="form-control" rows="5" placeholder="Nhập nội dung liên hệ..." required></textarea>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success px-5 py-2">Gửi ngay</button>
                        </div>
                    </form>

                    <div id="messageBox" class="alert text-center d-none mt-4"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("contactForm").addEventListener("submit", function (e) {
            e.preventDefault();
            const box = document.getElementById("messageBox");
            box.classList.remove("d-none", "alert-danger");
            box.classList.add("alert-success");
            box.textContent = "Cảm ơn bạn đã gửi liên hệ! ";
        });
    </script>
}
